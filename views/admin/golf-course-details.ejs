<%- include('../partials/head') %>
<div class="container mt-4">
    <h1 class="mb-4">Golf Course Details</h1>
    
    <div class="row">
        <div class="col-md-6">
            <img src="/uploads/<%= golfCourse.image_id %>"
                 alt="<%= golfCourse.title %>"
                 class="img-fluid mb-3">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3"><%= golfCourse.title %></h2>
            <p class="mb-3"><%= golfCourse.content %></p>
            <p class="mb-3"><strong>Price:</strong> <%= golfCourse.price.toLocaleString() %></p>
            <p class="mb-3"><strong>Status:</strong> <%= golfCourse.status %></p>
            <p class="mb-3"><strong>Holes:</strong> <%= golfCourse.course_info.holes %></p>
            <p class="mb-3"><strong>Par:</strong> <%= golfCourse.course_info.par %></p>
            <p class="mb-3"><strong>Featured:</strong> <%= golfCourse.is_featured ? 'Yes' : 'No' %></p>
            <p class="mb-3"><strong>Allow Full Day:</strong> <%= golfCourse.allow_full_day ? 'Yes' : 'No' %></p>
            <p class="mb-3"><strong>Sale Price:</strong> <%= golfCourse.sale_price ? golfCourse.sale_price.toLocaleString() : 'N/A' %></p>
        </div>
    </div>
    
    <a href="/admin/golf-courses" class="btn btn-secondary mt-3">Back to Golf Courses</a>
</div>
<%- include('../partials/footer') %>