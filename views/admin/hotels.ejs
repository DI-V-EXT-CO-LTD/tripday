<!-- hotels.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Hotels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            width: 100%;
            min-width: 2050px;
        }
        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }
        .table th,
        .table td {
            border-right: 1px solid #dee2e6;
            padding: 0.75rem;
        }
        .table th:last-child,
        .table td:last-child {
            border-right: none;
        }
        .table th {
            text-align: center;
            justify-content: center;
            align-items: center;
        }
        .table td {
            text-align: left;
        }
        .HotelName-column {
            width: 30%;
        }
        .HotelAddress-column {
            width: 40%;
            min-width: 760px;
        }
        .HotelAuthor-column {
            width: 5%;
            text-align: center;
        }
        .HotelRoomCount-column {
            width: 5%;
            text-align: center;
        }
        .HotelActions-column {
            min-width: 380px;
            
        }
        .btn-group-sm > .btn, .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0.2rem;
        }
    </style>
</head>
<body>
    <div class="container">
      
        <a href="/admin/hotels/add" class="btn btn-primary mb-3">Add New Hotel</a>
        <div class="table-responsive" style="width: 100%;">
            <table class="table table-striped" style="width: 100%;">
                <thead>
                    <tr>
                        <th class="HotelName-column" style="text-align: center;">Hotel Name</th>
                        <th class="HotelAddress-column" style="text-align: center;">Address</th>
                        <th class="HotelAuthor-column" style="text-align: center;">Author</th>
                        <th class="HotelRoomCount-column" style="text-align: center;">Rooms</th>
                        <th class="HotelActions-column" style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% hotels.forEach(hotel => { %>
                        <tr>
                            <td class="HotelName-column"style="text-align: center;"><%= hotel.title %></td>
                            <td class="HotelAddress-column"><%= hotel.address %></td>
                            <td class="HotelAuthor-column"style="text-align: center;">Author</td>
                            <td class="HotelRoomCount-column"style="text-align: center;">3</td>
                            <td class="HotelActions-column" style="text-align: center;">
                                <a href="/admin/hotels/<%= hotel._id %>/details" class="btn btn-info btn-sm">Details</a>
                                <a href="/admin/hotels/<%= hotel._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/admin/hotels/<%= hotel._id %>/manage-rooms" class="btn btn-success btn-sm">Manage Rooms</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/admin/hotels?page=1">처음</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/admin/hotels?page=<%= currentPage - 1 %>">이전</a>
                        </li>
                    <% } %>
                    
                    <% for(let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/admin/hotels?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/admin/hotels?page=<%= currentPage + 1 %>">다음</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/admin/hotels?page=<%= totalPages %>">마지막</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>