<h2>Hotel Registration</h2>
<form action="/admin/hotels/register" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Hotel Name</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>
  <div class="mb-3">
    <label for="nameEn" class="form-label">Hotel Name (English)</label>
    <input type="text" class="form-control" id="nameEn" name="nameEn">
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">Hotel Description</label>
    <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
  </div>
  <div class="mb-3">
    <label for="address" class="form-label">Address</label>
    <input type="text" class="form-control" id="address" name="address" required>
  </div>
  <div class="mb-3">
    <label for="map_lat" class="form-label">Latitude</label>
    <input type="number" class="form-control" id="map_lat" name="map_lat" step="any" required>
  </div>
  <div class="mb-3">
    <label for="map_lng" class="form-label">Longitude</label>
    <input type="number" class="form-control" id="map_lng" name="map_lng" step="any" required>
  </div>
  <div class="mb-3">
    <label for="star_rate" class="form-label">Star Rating</label>
    <input type="number" class="form-control" id="star_rate" name="star_rate" min="1" max="5" required>
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Base Price</label>
    <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
  </div>
  <div class="mb-3">
    <label for="check_in_time" class="form-label">Check-in Time</label>
    <input type="time" class="form-control" id="check_in_time" name="check_in_time" required>
  </div>
  <div class="mb-3">
    <label for="check_out_time" class="form-label">Check-out Time</label>
    <input type="time" class="form-control" id="check_out_time" name="check_out_time" required>
  </div>
  <div class="mb-3">
    <label for="status" class="form-label">Status</label>
    <select class="form-control" id="status" name="status" required>
      <option value="active">Active</option>
      <option value="inactive">Inactive</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="image_id" class="form-label">Image ID</label>
    <input type="text" class="form-control" id="image_id" name="image_id" required>
  </div>
  <div class="mb-3">
    <label for="banner_image_id" class="form-label">Banner Image ID</label>
    <input type="text" class="form-control" id="banner_image_id" name="banner_image_id" required>
  </div>
  <div class="mb-3">
    <label for="location_id" class="form-label">Location ID</label>
    <input type="text" class="form-control" id="location_id" name="location_id" required>
  </div>
  <button type="submit" class="btn btn-primary">Register Hotel</button>
</form>